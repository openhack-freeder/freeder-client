<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/eventinfo" />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16dp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/event_day"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/circlebox"
        android:layout_toStartOf="@+id/event_category"
        android:fontFamily="@font/roboto_regular"
        android:text="TextView"
        android:textColor="#CC0066" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="211dp"
        android:text="카테고리" />

    <TextView
        android:id="@+id/event_category"
        android:layout_width="194dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="168dp"
        android:background="#555555"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal|center_vertical"
        android:text="카테고리"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="133dp"
        android:text="신청기간" />

    <TextView
        android:id="@+id/event_applyperiod"
        android:layout_width="192dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:background="#555555"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center_horizontal|center_vertical"
        android:text="신청기간"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/event_apply"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="신청하러 가기"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="gravity"
        android:background="#E95C8A"
        android:onClick="to_apply"
        android:fontFamily="@font/roboto_regular"/>

    <RelativeLayout
        android:id="@+id/circlebox"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/white_back2"
        android:elevation="6dp">

        <CheckBox
            android:id="@+id/event_favorite"
            android:layout_width="48dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/checkselector"
            android:focusable="false" />

    </RelativeLayout>

</RelativeLayout>