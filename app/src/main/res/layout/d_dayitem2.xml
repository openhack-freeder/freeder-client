<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/mainbox2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/white_back"
        android:elevation="4dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_img2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/circle" />

        <TextView
            android:id="@+id/event_name2"
            android:layout_width="204dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/event_d_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="TextView"
            android:textColor="#CC0080" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/circlebox2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/mainbox2"
        android:layout_alignEnd="@+id/mainbox2"
        android:background="@drawable/white_back2"
        android:elevation="6dp">

        <CheckBox
            android:id="@+id/event_favorite2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/checkselector"
            android:focusable="false" />

    </RelativeLayout>

</RelativeLayout>